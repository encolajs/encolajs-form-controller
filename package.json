{
  "name": "@encolajs/form-controller",
  "version": "0.1.0",
  "description": "Framework-agnostic form state management using alien-signals",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./zod": {
      "import": "./dist/zod.es.js",
      "types": "./dist/zod.d.ts"
    },
    "./yup": {
      "import": "./dist/yup.es.js",
      "types": "./dist/yup.d.ts"
    },
    "./valibot": {
      "import": "./dist/valibot.es.js",
      "types": "./dist/valibot.d.ts"
    },
    "./encola": {
      "import": "./dist/encola.es.js",
      "types": "./dist/encola.d.ts"
    }
  },
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "files": [
    "dist",
    "zod.ts",
    "yup.ts",
    "valibot.ts",
    "encola.ts"
  ],
  "scripts": {
    "prebuild": "tsc --emitDeclarationOnly",
    "build": "vite build && vite build --config vite.config.adapters.ts",
    "build:main": "vite build",
    "build:adapters": "vite build --config vite.config.adapters.ts",
    "dev": "vite build --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write '{src,tests}/**/*.{js,ts,vue}'",
    "format:check": "prettier --check '{src,tests}/**/*.{js,ts,vue}'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "ci": "npm run format:check && npm run lint && npm run type-check && npm run test:coverage"
  },
  "keywords": [
    "form",
    "form validation",
    "reactive",
    "signals",
    "framework-agnostic",
    "typescript",
    "vuejs",
    "react",
    "alpinejs"
  ],
  "author": "Encola JS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/encolajs/encolajs-form-controller.git"
  },
  "dependencies": {
    "alien-signals": "^3.0.0"
  },
  "peerDependencies": {
    "@encolajs/validator": ">=1.3.0",
    "valibot": ">=1.1.0",
    "yup": ">=1.7.0",
    "zod": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@encolajs/validator": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "yup": {
      "optional": true
    },
    "valibot": {
      "optional": true
    }
  },
  "devDependencies": {
    "@encolajs/validator": "^1.3.2",
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.1",
    "jsdom": "^27.0.0",
    "prettier": "^2.8.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "valibot": "^1.1.0",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^3.2.4",
    "yup": "^1.7.1",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
